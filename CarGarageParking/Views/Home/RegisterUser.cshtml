@model CarGarageParking.ViewModel.ApplicationRegistrationViewModel

<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/css/GarageIntro.css" />
</head>

@{
    ViewData["Title"] = "Register a user";
}

<h1>Step 1 of 4: Enter Basic Information</h1>

<form asp-action="RegisterUser" asp-controller="Home" method="post">
    <div class="form-group">
        <label asp-for="Owner.FirstName" class="form-label"></label>
        <input type="text" asp-for="Owner.FirstName" class="form-control" />
        <span asp-validation-for="Owner.FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Owner.LastName" class="form-label"></label>
        <input type="text" asp-for="Owner.LastName" class="form-control" />
        <span asp-validation-for="Owner.LastName" class="text-danger"></span>
    </div>
    <div class="form-buttons">
        <button type="submit" class="btn btn-primary">Submit</button>
        <button type="reset" class="btn btn-secondary">Reset</button>
        <a href="@Url.Action("Index","Home")" class="btn btn-warning">Cancel all</a>
    </div>
   

</form>
 

<div class="progress mt-4">
    <div class="progress-bar progress-bar-striped progress-bar-animated bg-info" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
        Step 1 of 4
    </div>
</div>

